<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="640" prefWidth="320" style="-fx-background-color: rgb(32,32,32);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.HelloController">

   <HBox alignment="BASELINE_RIGHT">
      <Label fx:id="textCalculate" ellipsisString=""  textAlignment="RIGHT" textOverrun="LEADING_ELLIPSIS">
         <HBox.margin>
            <Insets left="10.0" right="10.0" top="5.0" />
         </HBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>

   </HBox>
   <TextArea fx:id="input" text="0" wrapText="true">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
   </TextArea>

   <GridPane fx:id="buttonsPanel" hgap="5" vgap="5">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </GridPane>
</VBox>
